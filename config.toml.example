[server]
host = "0.0.0.0"
port = 3000

[telegram]
bot_token = "YOUR_BOT_TOKEN"

[github]
webhook_secret = "your-webhook-secret"

[[routing]]
repo_pattern = "*"
chat_id = -1001234567890
events = ["pull_request.opened", "pull_request.closed", "issues.opened", "push", "workflow_run"]

[[routing]]
repo_pattern = "myorg/*"
chat_id = -1009876543210
events = ["*"]
